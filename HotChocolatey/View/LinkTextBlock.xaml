<UserControl
    x:Class="HotChocolatey.View.LinkTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserControl"
    d:DesignHeight="22"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <TextBlock>
        <Hyperlink Click="OnLinkClicked">
            <TextBlock Text="{Binding NavigationUrl, ElementName=UserControl}" TextTrimming="CharacterEllipsis" />
        </Hyperlink>
    </TextBlock>

</UserControl>
