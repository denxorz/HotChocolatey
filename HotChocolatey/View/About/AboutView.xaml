<UserControl
    x:Class="HotChocolatey.View.About.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:about="clr-namespace:HotChocolatey.View.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserControl"
    Foreground="{DynamicResource TextBrush}"
    mc:Ignorable="d">
    <Grid>
        <Image
            Width="63"
            Height="63"
            Margin="78,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="pack://application:,,,/Images/Logos/Hot Chocolate-96.png" />
        <TextBlock
            Height="63"
            Margin="162,10,203,0"
            VerticalAlignment="Top"
            FontSize="48"
            Text="Hot chocolatey"
            TextWrapping="Wrap" />
        <TextBlock
            Width="550"
            Margin="78,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Visual Studio NuGet inspired, unofficial, interface for the Windows package manager Chocolatey."
            TextWrapping="Wrap" />
        <TextBlock
            Margin="78,99,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Copyright © 2018 Denxorz"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="78,204,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Text="Based on / thanks to"
            TextWrapping="Wrap" />

        <about:AboutItem
            Title="Hot chocolatey"
            Width="350"
            Height="65"
            Margin="78,130,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IconSource="pack://application:,,,/Images/Logos/Hot Chocolate-96.png"
            License=""
            Website="https://github.com/denxorz/HotChocolatey" />

        <WrapPanel
            Width="1100"
            Margin="78,225,0,10"
            ItemHeight="65"
            ItemWidth="350">
            <about:AboutItem
                Title="Chocolatey"
                IconSource="pack://application:,,,/Images/Logos/chocolateyicon.png"
                License="http://www.apache.org/licenses/LICENSE-2.0"
                Website="https://chocolatey.org/" />
            <about:AboutItem
                Title="SharpVectors"
                IconSource="pack://application:,,,/Images/Logos/svg-logo-v.png"
                License="http://sharpvectors.codeplex.com/license"
                Website="http://sharpvectors.codeplex.com/" />
            <about:AboutItem
                Title="Icons8"
                IconSource="pack://application:,,,/Images/Logos/I Love Icons8-100.png"
                License="https://icons8.com/good-boy-license/"
                Website="https://icons8.com/" />
            <about:AboutItem
                Title="NuGet"
                IconSource="pack://application:,,,/Images/Logos/nugetlogo.png"
                License="https://github.com/NuGet/Home/blob/dev/LICENSE.txt"
                Website="https://www.nuget.org/" />
            <about:AboutItem
                Title="Visual Studio"
                IconSource="pack://application:,,,/Images/Logos/visualstudiologo.png"
                License="https://www.visualstudio.com/support/legal/mt171547"
                Website="https://www.visualstudio.com/" />
            <about:AboutItem
                Title="Markdig"
                IconSource="pack://application:,,,/Images/Logos/markdig.png"
                License="https://github.com/lunet-io/markdig/blob/master/license.txt"
                Website="https://github.com/lunet-io/markdig" />
            <about:AboutItem
                Title="Apache log4net"
                IconSource="pack://application:,,,/Images/Logos/Log4net.png"
                License="http://logging.apache.org/log4net/license.html"
                Website="https://logging.apache.org/log4net/" />
            <about:AboutItem
                Title="Fody.PropertyChanged"
                IconSource="pack://application:,,,/Images/Logos/Fody.png"
                License="https://github.com/Fody/PropertyChanged/blob/master/license.txt"
                Website="https://github.com/Fody/PropertyChanged" />
            <about:AboutItem
                Title="Fody.Bindables"
                IconSource="pack://application:,,,/Images/Logos/bindables.png"
                License="https://github.com/yusuf-gunaydin/Bindables/blob/master/LICENSE"
                Website="https://github.com/yusuf-gunaydin/Bindables" />
            <about:AboutItem
                Title="Wix toolset"
                IconSource="pack://application:,,,/Images/Logos/wixlogo.png"
                License="http://wixtoolset.org/about/license/"
                Website="http://wixtoolset.org/" />
            <about:AboutItem
                Title="Fody.Stamp"
                IconSource="pack://application:,,,/Images/Logos/fodystamp.png"
                License="https://opensource.org/licenses/mit-license.php"
                Website="https://github.com/Fody/Stamp" />
            <about:AboutItem
                Title="ProGet"
                IconSource="pack://application:,,,/Images/Logos/proget.png"
                License="http://inedo.com/proget/license-agreement"
                Website="http://inedo.com/proget" />
            <about:AboutItem
                Title="HTML-Renderer"
                IconSource="pack://application:,,,/Images/Logos/nugetlogo.png"
                License="https://htmlrenderer.codeplex.com/license"
                Website="https://htmlrenderer.codeplex.com/" />
            <about:AboutItem
                Title="mahapps.metro"
                IconSource="pack://application:,,,/Images/Logos/mahapps.metro.logo2.png"
                License="https://opensource.org/licenses/MS-PL"
                Website="http://mahapps.com/" />
            <about:AboutItem
                Title="Entity Framework Core Sqlite"
                IconSource="pack://application:,,,/Images/Logos/ef.png"
                License="https://raw.githubusercontent.com/aspnet/Home/2.0.0/LICENSE.txt"
                Website="https://www.asp.net/" />
            <about:AboutItem
                Title="Extended WPF Toolkit"
                IconSource="pack://application:,,,/Images/Logos/LogoXCEED.png"
                License="http://wpftoolkit.codeplex.com/license"
                Website="http://wpftoolkit.codeplex.com/" />
            <about:AboutItem
                Title="JetBrains Resharper"
                IconSource="pack://application:,,,/Images/Logos/packageReSharper.png"
                License="https://www.jetbrains.com/buy/opensource/?product=resharper"
                Website="https://www.jetbrains.com/resharper/" />
            <about:AboutItem
                Title="SingleInstanceApp"
                IconSource="pack://application:,,,/Images/Logos/nugetlogo.png"
                License=""
                Website="https://github.com/taylorjonl/SingleInstanceApp" />
        </WrapPanel>
        <TextBlock
            Width="70"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Foreground="Gray"
            Text="{Binding Version, ElementName=UserControl}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
