<UserControl x:Class="HotChocolatey.View.About.AboutItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HotChocolatey.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="79">
    <Grid>
        <Image HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Source="{Binding IconSource, IsAsync=true}" Margin="0,9,0,0" RenderOptions.BitmapScalingMode="HighQuality" />
        <TextBlock HorizontalAlignment="Left" Margin="53,10,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" />
        <local:LinkTextBlock Margin="53,26,10,0" VerticalAlignment="Top" NavigationUrl="{Binding Website, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <local:LinkTextBlock Margin="53,42,10,0" VerticalAlignment="Top" NavigationUrl="{Binding License, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>
