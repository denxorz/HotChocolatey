<UserControl x:Class="HotChocolatey.UI.AboutItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotChocolatey.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Source="{Binding IconSource}"/>
        <TextBlock HorizontalAlignment="Left" Margin="53,10,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top"/>
        <TextBlock Margin="53,26,10,0" TextWrapping="Wrap" VerticalAlignment="Top"><Hyperlink Click="OnLinkClicked"><TextBlock Text="{Binding Website}" /></Hyperlink></TextBlock>
        <TextBlock Margin="53,42,10,0" TextWrapping="Wrap" VerticalAlignment="Top"><Hyperlink Click="OnLinkClicked"><TextBlock Text="{Binding License}" /></Hyperlink></TextBlock>
    </Grid>
</UserControl>
